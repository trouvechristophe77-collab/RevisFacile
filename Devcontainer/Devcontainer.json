{
    "name": "Flutter Development (Pre-built)",
    // UTILISEZ UNE IMAGE DOCKER AVEC FLUTTER PRÉINSTALLÉ
    "image": "dart:stable", 

    "features": {
        "ghcr.io/devcontainers/features/flutter:1": {
            "version": "latest" 
        }
    },

    // La ligne "postCreateCommand" n'est plus nécessaire car Flutter est géré par la "feature".

    "customizations": {
        "vscode": {
            "extensions": [
                "Dart-Code.dart-code",
                "Dart-Code.flutter"
            ]
        }
    },

    "remoteUser": "vscode"
}
